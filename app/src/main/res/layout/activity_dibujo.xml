<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="seleccionarColor"
                android:text="Rojo"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_azul"
                android:onClick="seleccionarColor"
                android:text="Azul"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_amarillo"
                android:onClick="seleccionarColor"
                android:text="Amarillo"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_verde"
                android:onClick="seleccionarColor"
                android:text="Verde"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/fondo_redondeado"
                android:onClick="borrarDibujo"
                android:text="Borrar"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Spinner
                android:id="@+id/sp_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_blanco"
                android:onClick="cambiarFormaRedonda"
                android:text="Red."
                android:textColor="#8D0F0707"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado_blanco"
                android:onClick="cambiarFormaCuadrada"
                android:text="Cuad."
                android:textColor="#900F0707"
                app:backgroundTint="@null" />
        </TableRow>

    </TableLayout>

    <com.example.apppromocion_damian_coria.CustomDrawingView
        android:id="@+id/customDrawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="200" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/fondo_redondeado"
        android:gravity="center"
        android:onClick="volverAMenu"
        android:text="Volver"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null" />
</LinearLayout>
